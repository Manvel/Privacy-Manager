{
  "extends": "eslint:recommended",
  "env": {
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "globals": {
    "browser": true,
    "it": true,
    "describe": true,
    "after": true,
    "before": true,
    "window": true,
    "require": true,
    "module": true,
    "__dirname": true,
    "process": true,
    "chrome": true,
    "getStorage": true,
    "setStorage": true,
    "startCollectingRequests": true,
    "addBlockAgentListener": true,
    "browsingData": true,
    "deleteCookies": true,
    "addRequestListener": true,
    "removeRequestListener": true,
    "updateRequestObj": true,
    "collectedRequests": true,
    "stopCollectingRequests": true,
    "removeBlockAgentListener": true,
    "additionalPermission": true,
    "document": true,
    "registerActionListener": true,
    "createBasicSettingObj": true,
    "addSettingItem": true,
    "TableList": true,
    "alert": true,
    "turnSwitchesOff": true,
    "result": true,
    "Event": true,
    "switchEvent": true,
    "closeDialog": true,
    "checkSettingState": true,
    "privacyData": true,
    "ext": true
  },
  "rules": {
    "no-unused-vars": "off",
    "no-constant-condition": "off",
    "no-trailing-spaces": ["error", { "ignoreComments": true }],
    "indent": ["error", 2, {
      "FunctionDeclaration": {
        "parameters": "first"
      },
      "SwitchCase": 1,
      "CallExpression": {
        "arguments": "first"
      },
      "ArrayExpression": "first",
      "ObjectExpression": "off"
    }],
    "space-before-function-paren": ["error", "never"],
    "brace-style": ["error", "allman"],
    "semi": "error"
  }
}